@{
    ViewBag.Title = "tipo Alerta";
}

<link href="@Url.Content("~/vendor/datatables/js/dataTables.bootstrap4.min.css")" rel="stylesheet" type="text/css">

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tipos de Alertas</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <button class="btn btn-primary" style="display: @ViewBag.ShowCrudIncluir;" data-toggle="modal" data-target="#tipoaAlertaModal" onclick="m.tipoalerta.settipoalertainclui()">
                Incluir
            </button>
            <button class="btn btn-primary" style="display: @ViewBag.ShowCrudEditar;" onclick="m.tipoalerta.edittipoalerta()">
                Editar
            </button>
            <button class="btn btn-primary" style="display: @ViewBag.ShowCrudExcluir;" onclick="m.tipoalerta.exclui()">
                Excluir
            </button>
            <button class="btn btn-primary" onclick="m.maquina.exportar()">
                Exportar
            </button>
        </div>
        <div class="card-body">

            <!-- Modal -->
            <div class="modal fade" id="tipoaAlertaModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body">

                            <div class="form-group">
                                <label>Empresa:</label>
                                <select class="form-control" id="slempresatipoalerta">
                                    @if (ViewBag.ListaEmpresas != null)
                                    {
                                        foreach (var item in ViewBag.ListaEmpresas)
                                        {
                                            if (item != null)
                                            {
                                                <option id="@item.Id">@item.Nome</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Tipo:</label>
                                <select class="form-control" id="slopcaoestipoalerta">
                                    @if (ViewBag.ListaTipoAlertaOpcoes != null)
                                    {
                                        foreach (var item in ViewBag.ListaTipoAlertaOpcoes)
                                        {
                                            if (item != null)
                                            {
                                                <option id="@item.Id">@item.Descricao</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Descrição:</label>
                                <input id="txtdesctipoalerta" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Unidade Medida:</label>
                                <input id="txtunidademedida" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Ativo:</label>
                                <select class="form-control" id="sltipoalertaativo">
                                    <option id="1" selected="selected">Ativo</option>
                                    <option id="0">Inativo</option>
                                </select>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-cancelar btn-default" data-dismiss="modal">Cancelar</button>
                            <button type="button" onclick="m.tipoalerta.salva();" class="btn btn-primary">Salvar</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>

            <div class="table-responsive">
                <table class="table table-bordered"
                       id="dataTabletiposAlertas"
                       data-pagination="true"
                       data-search="true"
                       data-click-to-select="true"
                       data-pagination-h-align="left"
                       data-pagination-detail-h-align="right"
                       cellspacing="0">
                    <thead>
                        <tr>
                            <th data-field="state" data-checkbox="true"></th>
                            <th data-field="Id">Id</th>
                            <th data-field="Descricao">Descrição</th>
                            <th data-field="Tipo">Tipo</th>
                            <th data-field="UnidadeMedida">Unidade Medida</th>
                            <th data-field="AtivoGrid">Ativo</th>
                            <th data-field="DescricaoEmpresa">Empresa</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<link href="@Url.Content("~/vendor/datatables/bootstrap-table.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/vendor/datatables/bootstrap-table.min.js")"></script>

<script>
    $(document).ready(function () {
        m.tipoalerta.init(@Html.Raw(Json.Encode(ViewBag.ListaTipoAlerta)));
    });
</script>