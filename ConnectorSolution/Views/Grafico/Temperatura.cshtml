<style>
    #container {
        min-width: 320px;
        height: 400px;
        margin: 0 auto;
    }

    #container2 {
        min-width: 320px;
        height: 400px;
        margin: 0 auto;
    }
</style>

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Gráfico de Temperatura</h1>
    <hr />
    <div class="row">
        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
            <label style="color:#337abd; font-weight:1;">Informe a máquina:</label>
            <select class="form-control" id="slmaquinas">
                @if (ViewBag.ListaMaquinas != null)
                {
                    foreach (var item in ViewBag.ListaMaquinas)
                    {
                        if (item != null)
                        {
                            <option id="@item.ID">@item.Descricao</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
            <label style="color:#337abd; font-weight:1;">Informe o período:</label>
            <input type="text" name="daterange" class="form-control" value="@ViewBag.DataFiltro" />
        </div>

        <div class="clearfix"></div>
        <div class="col-xs-10 col-sm-4 col-md-4 col-lg-4">
            <button type="button" class="btn btn-primary mb-2" style="margin-top: 28px !important;" onclick="m.grafico.prestempprod()">Consultar</button>
        </div>
        <div class="clearfix"></div>
        <br /><br />
    </div>
    <hr />

</div>
<div style="padding: 20px !important;">
    <table class="table">
        <tr><td><div id="container"></div></td></tr>
        <tr><td><div id="container2"></div></td></tr>

    </table>

</div>

<script>
    $(function () {
        $('input[name="daterange"]').daterangepicker({
            opens: 'left'
        }, function (start, end, label) {
            console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
        });
        //
        $(".applyBtn")[0].innerHTML = 'Concluir';
        $(".cancelBtn")[0].innerHTML = 'Cancelar';
    });
</script>