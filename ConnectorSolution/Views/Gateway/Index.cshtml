@{
    ViewBag.Title = "Index";
}


<link href="@Url.Content("~/vendor/datatables/js/dataTables.bootstrap4.min.css")" rel="stylesheet" type="text/css">

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Gateway</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <button class="btn btn-incluir btn-default" data-toggle="modal" data-target="#gatewayModal" onclick="m.gateway.setgatewayinclui()">
                Incluir Gateway
            </button>
        </div>
        <div class="card-body">

            <!-- Modal -->
            <!-- Modal -->
            <div class="modal fade" id="gatewayModal" tabindex="-1" role="dialog" aria-labelledby="modalGatewayLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="modalGatewayLabel">Incluir Gateway</h4>
                        </div>
                        <div class="modal-body">

                            <div class="form-group">
                                <label>Descrição do Gateway</label>
                                <input id="txtdescgateway" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>MAC do Gateway</label>
                                <input id="txtmacgateway" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Tipo do Gateway</label>
                                <select class="browser-default custom-select">
                                    <option value="1">Gateway X</option>
                                    <option value="2">Gateway Y</option>
                                    <option value="3">Gateway Z</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-cancelar btn-default" data-dismiss="modal">Cancelar</button>
                            <button type="button" onclick="m.gateway.salva();" class="btn btn-primary">Salvar</button>
                            <button type="button" id="btnexcluirgateway" onclick="m.gateway.exclui();" class="btn btn-danger">Exlcuir</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>

            <div class="table-responsive">
                <table class="table table-bordered" id="dtgateways" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Descrição</th>
                            <th>MAC</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.ListaGateways != null)
                        {
                            bool b = false;
                            foreach (var item in ViewBag.ListaGateways)
                            {
                                if (b)
                                {
                                    b = false;
                                    if (item != null)
                                    {
                                        <tr class="odd gradeX tbl-tr">
                                            <td>@item.Id</td>
                                            <td>@item.Descricao</td>
                                            <td>@item.MAC</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    b = true;
                                    if (item != null)
                                    {
                                        <tr class="odd gradeX tbl-tr-no">
                                            <td>@item.Id</td>
                                            <td>@item.Descricao</td>
                                            <td>@item.MAC</td>
                                        </tr>
                                    }
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="excluiGatewayModal" tabindex="-1" role="dialog" aria-labelledby="modalgatewayExcluiLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalgatewayExcluiLabel"></h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label>Você deseja excluir o gateway do sistema?</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-cancelar btn-default" data-dismiss="modal">Não</button>
                <button type="button" onclick="m.gateway.excluipost();" class="btn btn-danger">Sim</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script src="@Url.Content("~/vendor/datatables/js/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/vendor/datatables/js/dataTables.bootstrap4.min.js")"></script>

<script>
    var id = 0;

    $(document).ready(function () {
        m.gateway.init();
    });

</script>